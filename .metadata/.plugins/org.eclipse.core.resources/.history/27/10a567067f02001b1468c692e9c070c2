package decisao;

import javax.swing.JOptionPane;
import java.util.Arrays;

public class Exercicio4 {

	public static void main(String[] args) {
		int[] valores = {0, 0, 0};
		byte ix = 0;

		while (ix<3)
		{
			try
			{
				valores[ix] = Integer.parseInt(JOptionPane.showInputDialog("Informe o valor numero " + (ix + 1)));

				for (int iy = 0; iy < ix; iy++)
				{
					if (valores[ix] == valores[iy])
						throw new Exception("Valor Repetido");
				}
				ix++;
			}
			catch (Exception ex)
			{
				System.out.println("Valor Invalido : " + ex.getMessage() );
			}
		}

		Arrays.sort(valores);
		
		System.out.println(valores.length);
		
		for (int it = (valores.length - 1); it == 0; it--)
		{
			System.out.println("Valor : " + valores[it]);
		}
		
		
	}

}
