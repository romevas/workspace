package br.com.lojauati.modelo;

public class Televisao {
	private int canal;
	private boolean status;
	private int volume;

	public void aumentarVolume()
	{
		volume++;
	}
	public void diminuirVolume()
	{
		if (volume>0)
			volume--;
	}
	public void mudarCanal(int numero)
	{ 
		canal = numero;
	}
	public void ligar()
	{
		if (status=false)
			status=true;
	}
	public void desligar()
	{
		if (status=true)
			status=false;
	}
	
}
